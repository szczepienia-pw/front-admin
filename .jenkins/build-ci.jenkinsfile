pipeline {
    agent none
    stages {
        stage('build and update') {
            when {
                anyOf {
                    branch 'develop'
                    branch 'main'
                }
            }
            stages('build and update') {
                stage('recreate old node_modules') {
                    agent {
                        label 'vue'
                    }
                    steps {
                        sh 'tar -xf /app/global/node_modules.tar -C .'
                    }
                }
                stage('install') {
                    agent {
                        label 'vue'
                    }
                    steps {
                        sh 'npm install'
                    }
                }
                stage('update global node_modules') {
                    agent {
                        label 'vue'
                    }
                    steps {
                        sh 'tar -czf /app/global/node_modules.tar node_modules'
                    }
                }
                stage('build') {
                    agent {
                        label 'vue'
                    }
                    steps {
                        sh 'npm run build'
                        stash includes: 'dist/**', name: 'build'
                    }
                }
                stage('update develop') {
                    agent {
                        label 'vps'
                    }
                    when {
                        branch 'develop'
                    }
                    steps {
                        unstash 'build'
                        sh 'yes | rm -rf /home/flatly/drop_zone/www/develop/*'
                        sh 'cp -r * /home/flatly/drop_zone/www/develop/'
                    }
                }
                stage('update main') {
                    agent {
                        label 'vps'
                    }
                    when {
                        branch 'main'
                    }
                    steps {
                        unstash 'build'
                        sh 'yes | rm -rf /home/flatly/drop_zone/www/frontend/*'
                        sh 'cp -r * /home/flatly/drop_zone/www/frontend/'
                    }
                }
                stage('clean workspace') {
                    agent {
                        label 'vue'
                    }
                    steps {
                        cleanWs()
                    }
                }
            }
        }
    }
}