pipeline {
    agent none
    stages {
        stage('PR-test-ci-worker') {
            when {
                // execute only on PRs to develop and main
                anyOf {
                    changeRequest target: 'main'
                    changeRequest target: 'develop'
                }
            }
            agent {
                // execute on the vue container
                label 'vue'
            }
            stages {
                stage('npm-install') {
                    steps {
                        sh 'npm install'
                        stash name: 'repo'
                    } 
                }
                stage('build and test') {
                    parallel {
                        stage('build') {
                            steps {
                                unstash 'repo' 
                                sh 'npm run build'
                            }
                        }
                        stage('UT') {
                            steps {
                                unstash 'repo'
                                sh 'npm run test:unit'
                            }
                            
                        }
                    }
                }
            }
            // parallel {
            //     stage('build') {
            //         sh npm install
            //         sh npm run build
            //     }
            //     stage('UT') {
            //         sh npm install
            //         sh npm run test:unit
            //     }
            // }
        }
    }
}